	});
	
	$(".check_all_checked").change(function(){
		if ($('.check_all_checked:checked').length == $('.check_all_checked').length) {
			$('.checked_all').parent('span').addClass('checked');
		}else {
		   $('.checked_all').parent('span').removeClass('checked');
		}
	});
	
