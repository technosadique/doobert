	$('#submit').on('click',function(){
		if($('#user_profile_setting').valid() == false) {
			return false;
		} else {
			$('#submit').hide();
			if($.browser.msie) {
				$('.display_loader').html('<img id="loadimg" src="<?php echo base_url(); ?>assets/img/ajax-loading.gif" alt="loader" />');
			}
			$('.display_loader').show();
			$('#loadimg').show();
			return true;
		}
	});
	
	$('.chk').on('click',function(){
		if($(this).is(':checked') == true && $(this).attr('id') == 'private_rad') {
			//$('.privacy-setting-details').addClass('disable_icon');
			$('input[type=checkbox]').prop('disabled',true);
			$('.custom-checkbox').find('input[type=checkbox]').prop('checked',false);
		
		} else {
			//$('.privacy-setting-details').removeClass('disable_icon');
			$('input[type=checkbox]').prop('disabled',false);	
		}
	});
	$(".checked_all").change(function(){
		var verifyChecked = $('.checked_all').prop('checked');
		if(verifyChecked === true)
