body.red {background:url(../../img/red/pagebg.gif) repeat-x #fff !important;}
body.red img {max-width:100%;}
body.red #wrap {max-width:997px; margin:0 auto;background:#fff;}
.page-header-fixed .page-container.mart0 {margin-top:0;}


body.red .progress > .progress-bar-info{background-color: #ff7171;}
body.red .donation-form{border: 1px solid #f0d6d6;}
body.red .donation-form h2{ color:#a11d1d;}
body.red .donation-form .form-content .control-label.special{color:#a11d1d;}
body.red .donation-form .form-content .controls.amount .radio{ color:#a11d1d;}
body.red .donation-form .form-content .controls input{background: #f2f2f2; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,) !important;
background: -moz-linear-gradient(top,  #f2f2f2 0%, #ffffff 14%, #ffffff 100%) !important; /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f2f2f2), color-stop(14%,#ffffff), color-stop(100%,#ffffff)) !important; /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* IE10+ */
background: linear-gradient(to bottom,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* W3C */
color:#787878 !important; font:normal 18px/22px 'Roboto',sans-serif; padding: 10px 9px !important; height:auto; border:1px solid #d2d2d2;
}
/* donation form step 1 - rightpart*/
body.orange .recent-donations h2{ border-bottom:1px solid #fde0e0;}
body.red .recent-donations .bg {background:#fff1f1; }
body.red .recent-donations .donation-comment{border:1px solid #f0d6d6;}
body.red .recent-donations .donation-comment p.amount{ color:#a11d1d; }
body.red .donation-rightpart .rightpart-box .bg .view-profile, body.red .donation-rightpart .rightpart-box .bg .view-profile:hover, body.red .donation-rightpart .rightpart-box .bg p span{color:#a11d1d;}

/*Profile Title*/
body.red .donation-detail .page-title { background:#1679C4 url(../../img/red/pagebg.gif) repeat-x 0 -145px;}

/*progress & donation/pledge detail*/
body.red .progress {box-shadow:0 1px 2px rgba(0, 0, 0, 0.1) inset!important; background-image:linear-gradient(to bottom, #E6E6E6, #ECECEC)!important;}
body.red .progress .bar {background-color:#6abfff; background-size: 70px 70px;}
body.red .raised-amount, body.red .goal-amount {background:url(../../img/white-transperent-bg.png) repeat 0 0; color:#821919; }

body.red .btnDonatePledge {color:#fff; border-bottom:2px solid #931a1a; background: #ed5757; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(top,  #ed5757 0%, #c02a2a 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ed5757), color-stop(100%,#c02a2a)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #ed5757 0%,#c02a2a 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #ed5757 0%,#c02a2a 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #ed5757 0%,#c02a2a 100%); /* IE10+ */
background: linear-gradient(to bottom,  #ed5757 0%,#c02a2a 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ed5757', endColorstr='#c02a2a',GradientType=0 ); /* IE6-8 */}  

body.red .btnDonatePledge:hover, body.red .btnDonatePledge:focus{color:#fff; background: #ed5757; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(top,  #c02a2a 0%, #ed5757 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#c02a2a), color-stop(100%,#ed5757)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #c02a2a 0%,#ed5757 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #c02a2a 0%,#ed5757 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #c02a2a 0%,#ed5757 100%); /* IE10+ */
background: linear-gradient(to bottom,  #c02a2a 0%,#ed5757 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#c02a2a', endColorstr='#ed5757',GradientType=0 ); /* IE6-8 */}

body.red .time {background:#f7f0f0 url(../../img/icon-clock.png) no-repeat 9px center; border:3px solid #f4e9e9; color:#2a2a2a;}
body.red .time .day-remaining {color:#2a2a2a;}
body.red .time .text {color:#2a2a2a; padding-left: 8px;}

body.red .donation-needed .donation-slider { background:url(../../img/red/slider.png) repeat-x 0px 8px;}
body.red .donation-needed .donation-slider .slider {background:url(../../img/red/slider.png) repeat-x 0px -38px; }
body.red .donation-needed .donation-slider .slider span {border:1px solid #585858; color:#fff; background: #e83131; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(top,  #e83131 0%, #a52323 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e83131), color-stop(100%,#a52323)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #e83131 0%,#a52323 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #e83131 0%,#a52323 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #e83131 0%,#a52323 100%); /* IE10+ */
background: linear-gradient(to bottom,  #e83131 0%,#a52323 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#e83131', endColorstr='#a52323',GradientType=0 ); /* IE6-8 */}

body.red .donation-needed .total {background:#f5f5f5; color:#e83131;}

body.red .social-icons {margin:18px 0 10px;}
body.red .social-icons img {margin:0 5px 10px 0;}

body.red .donation-pledge-detail .article-block .main-article {border:1px solid #f6c0c0;}
body.red .donation-pledge-detail .article-block .main-article .bg {background:#f8f8f8; }
body.red .donation-pledge-detail .article-block .main-article .bg p span {color:#a11d1d;}
body.red .donation-pledge-detail .article-block .main-article input.fb-link { border:1px solid #e2e2e2; background:#fff; color:#4b7276;}
body.red .donation-pledge-detail .article-block .main-article input.fb-link:focus{border-color: #999999;}
body.red .donation-pledge-detail .article-block .main-article .btnShare {background:url(../../img/btn-share.gif) no-repeat 0 0;}
body.red .view-profile {color:#de3030; background: url(../../img/red/arrow-right.gif) no-repeat right 8px; }
body.red .view-profile:hover {color:#de3030; }
body.red .donation-pledge-detail h1 {color:#de3030;}
body.red .donation-pledge-detail .media .posted-by{ color:#8d8c8c;}
body.red .donation-pledge-detail .media .posted-by span{color:#de3030;}
body.red .donation-pledge-detail .media .media-comment{ border:1px solid #e8e8e8;}
body.red .donation-pledge-detail .media .media-heading{color:#de3030; background:url(../../img/comment-bubble-top.gif) no-repeat 0px 0px; }

