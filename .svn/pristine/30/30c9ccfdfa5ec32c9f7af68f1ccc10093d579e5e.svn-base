var ExamAdd = function () {

	var handleExamAdd = function() {

		$('.form-horizontal').validate({ 
	            errorElement: 'span', //default input error message container
	            errorClass: 'help-block', // default input error message class
	            focusInvalid: false, // do not focus the last invalid input
	            rules: {
					 title: {
	                    required: true
	                }, 
					course_type: {
	                    required: true
	                },
					description: {
	                    required: true						
	                },
					duration: {
	                    required: true,
						digits:true
	                },
					price: {
	                    required: true						
						
	                },
					retake_price:{
					required: {
							depends: function(){
								if($('#course_type').val() == 'V'){
								  return true								  
								}else{
									return false
								}
							}
						},
					},		
					
					
					totalscore:{
					digits:true,
					required: {
							depends: function(){
								if($('#course_type').val() == 'V'){
								  return true
								}else{
									return false
								}
							}
						},
					},
					passingscore:{ 
					digits:true,
					required: {
							depends: function(){
								if($('#course_type').val() == 'V'){
								  return true
								}else{
									return false
								}
							}
						},
					},
					attempt:{
					digits:true,
					required: {
							depends: function(){
								if($('#course_type').val() == 'V'){
								  return true
								}else{
									return false
								}
							}
						},
					}
						               
	            },

	            messages: {
					 title: {
	                    required: "Course Title is required."
	                }, 
					
					course_type: {
	                    required: "Course Type is required."
	                },
					
					description: {
	                    required: "Course Description is required."						
	                }, 
					duration: {
	                    required: "Course Duration is required.",
						digits:"Please enter valid course duration time in minutes."
	                }, 
					price: {
	                    required: "Course Price is required."					
						
	                }, 
					
					retake_price: {
	                    required: "Retake Course Price is required."							
	                },
					
					totalscore: {
	                    required: "Total Score is required.",
						digits:"Please enter valid total score."
	                }, 
					passingscore: {
	                    required: "Passing Score is required.",
						digits:"Please enter valid passing score."
	                }, 
					attempt: {
	                    required: "No. of attempts is required.",
						digits:"Please enter valid No. of attempts."
	                }
					
	            },

	            invalidHandler: function (event, validator) { //display error alert on form submit   
	                $('.alert-danger', $('.form-horizontal')).show();
	            },

	            highlight: function (element) { // hightlight error inputs
	                $(element)
	                    .closest('.form-group').addClass('has-error'); // set error class to the control group
	            },

	            success: function (label) {
	                label.closest('.form-group').removeClass('has-error');
	                label.remove();
	            },

	            errorPlacement: function (error, element) {
	                error.insertAfter(element.closest('.form-group div'));
	            },

	            submitHandler: function (form) {
	                form.submit(); // form validation success, call ajax form submit
	            }
	        });

	        $('.form-horizontal input').keypress(function (e) {
	            if (e.which == 13) {
	                if ($('.form-horizontal').validate().form()) {
	                    $('.form-horizontal').submit(); //form validation success, call ajax form submit
	                }
	                return false;
	            }
	        });
	}
    return {
        //main function to initiate the module
        init: function () {        	
            handleExamAdd();  
			$('#portlet-config').modal('show');         
        }
    };
}();