function register_menu() {
	register_sidebar( array(
		'name'          =>('Rock'),
		'id'            => 'newsroom_blocks',
		'before_widget' => '<div class="news-blocks">',
		'after_widget'  => '</div>',
		'before_title'  => '<h2 class="widget-title">',
