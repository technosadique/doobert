body.blue {background:#fff url(../../img/blue/pagebg.gif) repeat-x !important;}
body.blue img {max-width:100%;}
body.blue #wrap {max-width:997px; margin:0 auto; background:#fff;}
.page-header-fixed .page-container.mart0 {margin-top:0;}


/*29april2014*/
body.blue .progress > .progress-bar-info{background-color: #57B5E3;}
body.blue .donation-form{border: 1px solid #b8d6ee;}
body.blue .donation-form h2{ color:#197bc6;}
body.blue .donation-form .form-content .control-label.special{color:#1c7fca;}
body.blue .donation-form .form-content .controls.amount .radio{ color:#1c7fca;}
body.blue .donation-form .form-content .controls input{background: #f2f2f2; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,) !important;
background: -moz-linear-gradient(top,  #f2f2f2 0%, #ffffff 14%, #ffffff 100%) !important; /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f2f2f2), color-stop(14%,#ffffff), color-stop(100%,#ffffff)) !important; /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* IE10+ */
background: linear-gradient(to bottom,  #f2f2f2 0%,#ffffff 14%,#ffffff 100%) !important; /* W3C */
color:#787878 !important; font:normal 18px/22px 'Roboto',sans-serif; padding: 10px 9px !important; height:auto; border:1px solid #d2d2d2;
}
/* donation form step 1 - rightpart*/
body.orange .recent-donations h2{ border-bottom:1px solid #f5e6d8;}
body.blue .recent-donations .bg {background:#eff8ff; }
body.blue .recent-donations .donation-comment{border:1px solid #e8e8e8;}
body.blue .recent-donations .donation-comment p.amount{ color:#0a558e; }
body.blue .donation-rightpart .rightpart-box .bg .view-profile, body.blue .donation-rightpart .rightpart-box .bg .view-profile:hover{color:#0A558E;}

/*Profile Title*/
body.blue .donation-detail .page-title { background:#1679C4 url(../../img/blue/pagebg.gif) repeat-x 0 -145px;}

/*progress & donation/pledge detail*/
body.blue .progress {box-shadow:0 1px 2px rgba(0, 0, 0, 0.1) inset!important; background-image:linear-gradient(to bottom, #E6E6E6, #ECECEC)!important;}
body.blue .progress .bar {background-color:#6abfff; background-size: 70px 70px;}
body.blue .raised-amount, body.blue .goal-amount {background:url(../../img/white-transperent-bg.png) repeat 0 0; color:#094572; }

body.blue .btnDonatePledge {color:#fff; border-bottom:2px solid #084d81; background: #4196d7; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(top,  #4196d7 0%, #1469aa 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#4196d7), color-stop(100%,#1469aa)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #4196d7 0%,#1469aa 100%); /* Chrome10+,Safari5.1+ */
