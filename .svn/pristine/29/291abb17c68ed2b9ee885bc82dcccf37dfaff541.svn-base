background: -ms-linear-gradient(top,  #1469aa 0%,#4196d7 100%); /* IE10+ */
background: linear-gradient(to bottom,  #1469aa 0%,#4196d7 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#1469aa', endColorstr='#4196d7',GradientType=0 ); /* IE6-8 */}


body.blue .time {background:#f3f3ec url(../../img/icon-clock.png) no-repeat 9px center; border:3px solid #eeede3; color:#2a2a2a;}
body.blue .time .day-remaining {color:#2a2a2a;}
body.blue .time .text {color:#2a2a2a; padding-left: 8px;}

body.blue .donation-needed .donation-slider { background:url(../../img/blue/slider.png) repeat-x 0px 8px;}
body.blue .donation-needed .donation-slider .slider {background:url(../../img/blue/slider.png) repeat-x 0px -38px; }
body.blue .donation-needed .donation-slider .slider span {border:1px solid #585858; color:#fff; background: #177fce; /* Old browsers */
/* IE9 SVG, needs conditional override of 'filter' to 'none' */
background: url(data:image/svg+xml;base64,);
background: -moz-linear-gradient(top,  #177fce 0%, #105a92 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#177fce), color-stop(100%,#105a92)); /* Chrome,Safari4+ */
