background: -o-linear-gradient(top,  #177fce 0%,#105a92 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #177fce 0%,#105a92 100%); /* IE10+ */
background: linear-gradient(to bottom,  #177fce 0%,#105a92 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#177fce', endColorstr='#105a92',GradientType=0 ); /* IE6-8 */}

body.blue .donation-needed .total {background:#f5f5f5; color:#177fce;}

body.blue .social-icons {margin:18px 0 10px;}
body.blue .social-icons img {margin:0 5px 10px 0;}

body.blue .donation-pledge-detail .article-block .main-article {border:1px solid #b8d6ee;}
body.blue .donation-pledge-detail .article-block .main-article .bg {background:#f8f8f8; }
body.blue .donation-pledge-detail .article-block .main-article .bg p span {color:#0A558E;}
body.blue .donation-pledge-detail .article-block .main-article input.fb-link { border:1px solid #e2e2e2; background:#fff; color:#4b7276;}
body.blue .donation-pledge-detail .article-block .main-article input.fb-link:focus{border-color: #999999;}
body.blue .donation-pledge-detail .article-block .main-article .btnShare {background:url(../../img/btn-share.gif) no-repeat 0 0;}
body.blue .view-profile {color:#0A558E; background: url(../../img/blue/arrow-right.gif) no-repeat right 8px; }
body.blue .view-profile:hover {color:#0A558E; }
body.blue .donation-pledge-detail h1 {color:#0a558e;}
body.blue .donation-pledge-detail .media .posted-by{ color:#8d8c8c;}
body.blue .donation-pledge-detail .media .posted-by span{color:#0a558e;}
body.blue .donation-pledge-detail .media .media-comment{ border:1px solid #e8e8e8;}
body.blue .donation-pledge-detail .media .media-heading{color:#0a558e; background:url(../../img/comment-bubble-top.gif) no-repeat 0px 0px; }

