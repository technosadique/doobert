ul.animals { display:block; list-style:none; *zoom:1; max-width:100%; margin:0 !important; padding:0 !important; }
ul.animals:before, ul.animals:after { content:" "; display:table }
ul.animals:after {clear:both}
ul.animals li { display:inline-block; margin-bottom:1.875em; padding-right:20px !important;}
ul.animals li:nth-child(4) {margin-right:0 !important;}
ul.animals li > a .animal-vcard { color:#5a5a5a }
ul.animals li a, ul.animals li a:hover{text-decoration:none !important; }
ul.animals li .animal-vcard, ul.animals li .add-animal { padding:1.25em; height:270px }
ul.animals li .animal-vcard .photo,
ul.animals li .animal-vcard .photo-placeholder,
ul.animals li .add-animal .photo,
ul.animals li .add-animal .photo-placeholder { max-width:100%; margin:0 auto; margin-bottom:35px; }
ul.animals li .animal-vcard .info, ul.animals li .add-animal .info { line-height:1.2em }
ul.animals li .animal-vcard .info h6, ul.animals li .add-animal .info h6 { text-transform:uppercase; overflow:hidden; white-space:nowrap; text-overflow:ellipsis; font-size:19px; color:#5a5a5a;}
ul.animals li .animal-vcard .info .details, ul.animals li .add-animal .info .details { font-size:13px; text-transform:capitalize; color:#5a5a5a; }

.animal-vcard {position:relative; background:white; border:1px solid #d9cfca; overflow:hidden }
.animal-vcard:hover .demeanor { bottom:-97% }
.animal-vcard i {background-image:-webkit-linear-gradient(-315deg, transparent 50%, red 50%); background-image:linear-gradient(45deg, transparent 50%, red 50%); position:absolute; top:-1px; right:0; height:45px; width:45px; padding:5px; color:white; text-align:right }
.animal-vcard .photo {border:1px solid #fff!important; -webkit-border-radius:1000px!important; -moz-border-radius:1000px!important; border-radius:1000px!important; overflow:hidden; width:140px; min-height:140px }
.animal-vcard .photo img { max-width:100%; width:140px; height:auto; border-radius:50% }
/*.animal-vcard .photo:not(.no-image):before {content:""; position:absolute; width:100%; height:100%; border-radius:50%; box-shadow:inset 0px 0px 4px 0px #797979}*/
.animal-vcard .demeanor { -webkit-transition:all 0.2s ease-out; -moz-transition:all 0.2s ease-out; transition:all 0.2s ease-out; position:absolute; overflow:hidden; bottom:0; left:0; width:100%; height:100%; bottom:-98%; padding:1em; color:white }
.animal-vcard .demeanor.purple { background-color:#71637d }
.animal-vcard .demeanor.orange { background-color:#f88d1c }
.animal-vcard .demeanor.green { background-color:#3ea055 }
.animal-vcard .demeanor.blue { background-color:#5e90a4 }
.animal-vcard .demeanor.unknown { background-color:#5a5a5a }
.animal-vcard .demeanor.opened { bottom:0 }
.animal-vcard .demeanor h6 { font-size:19px; font-weight:600; color:white; margin-bottom:0.5em }
.animal-vcard .demeanor p { font-size:13px;}
.add-animal { -webkit-transition:all 0.2s ease-out; -moz-transition:all 0.2s ease-out; transition:all 0.2s ease-out; border:3px dashed #d9cfca; color:#d9cfca }
.add-animal .photo-placeholder { box-shadow:0px 0px 3px white; background-color:#E4D5CC; background-image:url(/assets/add-animal-386c089176109a4f025539bf2d3a01bf.png); background-repeat:no-repeat; background-position:center; box-sizing:content-box; width:50px; height:50px; padding:45px; border-radius:50% }
.add-animal .info h6 { text-align:center; color:#E4D5CC; text-shadow:1px 1px 2px white; font-weight:600 }