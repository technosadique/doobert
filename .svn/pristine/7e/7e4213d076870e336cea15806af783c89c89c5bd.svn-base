		}
		
	}
	
	 function update_user($array,$user_id)
	{
		$this->db->where('in_userid', $user_id);
		$this->db->update('tbl_user', $array);
		// echo $this->db->last_query(); 
		return $this->db->affected_rows();
	}
	
	function get_organization_expired_one_day_before()
