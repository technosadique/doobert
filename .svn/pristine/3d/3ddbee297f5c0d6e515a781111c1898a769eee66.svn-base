@media (max-width:962px) {
	.animalsauto #card-table {display: none;}
	.animalsauto .stacktable.small-only {display: block!important; width: 100%;}
	.animalsauto .stacktable.small-only tbody {width: 100%; display: table;}
	.animalsauto .st-key {background: #f1f1f1!important; font: 500 14px "Roboto",sans-serif!important; padding: 6px 15px!important; text-align:right!important; width: 49%;}
	.animalsauto .st-val.available-transfer {text-align: left;}
}

@media (max-width:667px) {
	#notification-turn-on label.marb16 {margin-bottom: 16px;}
	.notification-on-label {margin-right:0; margin-bottom: 7px;}
	.btn.upload-animal-profile-btn.mart16 {margin-top: 16px;}
}

@media (max-width:375px) {
.form-control.milescode {margin:3px 3px 3px 0;}
}

@media (max-width:320px) {
.form-control.milescode {width:100%!important;}
}