						$order_transport_id = $this->order_transport_model->add_order_transport($order_transport);
						$route_animal_arr = array(
								'in_ord_trans_id' 	=>	$order_id."_".$crate_id,
								'dt_modified' 		=>  date('Y-m-d H:i:s')
