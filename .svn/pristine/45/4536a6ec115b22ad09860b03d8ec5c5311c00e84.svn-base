		$this->db->where('t.in_deleted',0);
		$this->db->where('u.in_deleted',0);
		$query = $this->db->get();
		//echo $this->db->last_query();exit;
		$reminder_transport_details = $query->result_array();	
		
		return $reminder_transport_details;
	}
	
