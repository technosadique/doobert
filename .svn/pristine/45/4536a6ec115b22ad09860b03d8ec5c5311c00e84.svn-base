	public function get_reminder_add_photo_transports()
	{
		$current_date = date("Y-m-d");
		$prev_date = date('Y-m-d', strtotime(' -1 day'));
		
		$this->db->select('t.in_transportation_id,t.in_trans_coods_id,u.st_email,o.st_org_code');
