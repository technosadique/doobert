@charset "utf-8";
/* CSS Document */
@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700);

#invite-friends-info{ padding:5px 10px 10px; width:98%; margin:0 auto; background:#fff; border-radius: 5px 5px 5px 5px; -moz-border-radius: 5px 5px 5px 5px; -webkit-border-radius: 5px 5px 5px 5px; border: 0px solid #ffffff;}
#invite-friends-info .heading{ border-bottom:1px solid #e5e5e5; padding-bottom:10px; display:flex; width:91%; margin:0 auto 17px;}
#invite-friends-info .heading span{ font:23px 'Open Sans',Helvetica,Arial,sans-serif; color:#189487; margin:0 19px 0 0; float:left;}
#invite-friends-info label{font:14px 'Open Sans',Helvetica,Arial,sans-serif; color:#444; float:left; margin:8px 0 0 0;}
.invite-friend-box{ margin:0px; padding:0px; width:100%;}
.invite-friend-box .friend-detail{ float:left; width:245px; margin:0 0 10px 0; color:#444; text-align:left;margin: 0 10px 10px 0;}
.invite-friend-box .friend-detail input{ float:left; margin:10px 8px 0 0;}
.invite-friend-box .friend-detail label{ float:left; margin:5px 0 0 0;}
.invite-friend-box .friend-detail img{ float:left; margin:0 8px 0 0}

.br {clear:both; margin:0; padding:0;}

#slider {
  position: relative;
  overflow: hidden;
  margin: 20px auto 0 auto;
  border-radius: 4px;
}

#slider ul {
  position: relative;
  margin: 0;
  padding: 0 0 0 40px;
  height:auto;
  list-style: none;
}

#slider ul li {
  position: relative;
  display: block;
  float: left;
  margin: 0;
  padding: 0;
  /*width: 895px;*/
 /* height: 215px;*/
  background: #fff;
  text-align: center;
  /*line-height: 300px;*/
}

a.control_prev, a.control_next {
  position: absolute;
  top: 40%;
  z-index: 999;
  display: block;
  padding:0;
  width: auto;
  height: auto;
  background: none;
  color: #fff;
  text-decoration: none;
  font-weight: 600;
  font-size: 18px;
  opacity: 0.8;
  cursor: pointer;
}

a.control_prev:hover, a.control_next:hover {
  opacity: 1;
  -webkit-transition: all 0.2s ease;
}

a.control_prev {
  border-radius: 0 2px 2px 0;
}

a.control_next {
  right: 0;
  border-radius: 2px 0 0 2px;
}

.slider_option {
  position: relative;
  margin: 10px auto;
  width: 160px;
  font-size: 18px;
}
.invitation-btn{ width:91%; margin:20px auto 0; clear:both; border-top:1px solid #e5e5e5; padding-top:20px;}
a.send-invitation-btn{ background:#ee6d35; padding:5px 19px 6px; font:18px 'Open Sans',Helvetica,Arial,sans-serif; color:#fff; text-decoration:none; cursor:pointer; display:inline-block;}

a.cancel_fr_popup{ background:#ee6d35; padding:5px 19px 6px; font:18px 'Open Sans',Helvetica,Arial,sans-serif; color:#fff; text-decoration:none; cursor:pointer; display:inline-block;}

/*Modal CSS*/
.close {
  display: inline-block;
  margin-top: 0px;
  margin-right: 0px;
  width: 12px;
  height: 12px;
  background-repeat: no-repeat !important;
  text-indent: -10000px;
  outline: none;
  background-image: url("../../images/popup_images/remove-icon-small.png") !important; float:right;
}

.modal.in .modal-dialog{-webkit-transform:translate(0,0);-ms-transform:translate(0,0);transform:translate(0,0)}.modal-dialog{position:relative;width:auto;margin:10px}.modal-content{position:relative;background-color:#fff;border:1px solid #999;border:1px solid rgba(0,0,0,.2);border-radius:6px !important;-webkit-box-shadow:0 3px 9px rgba(0,0,0,.5);box-shadow:0 3px 9px rgba(0,0,0,.5);background-clip:padding-box;outline:0}.modal-backdrop{position:fixed;top:0;right:0;bottom:0;left:0;z-index:1040;background-color:#000}.modal-backdrop.fade{opacity:0;filter:alpha(opacity=0)}.modal-backdrop.in{opacity:.5;filter:alpha(opacity=50)}

.modal-body{position:relative;padding:10px}

.modal-header{padding:15px;border-bottom:1px solid #e5e5e5;min-height:16.42857143px}.modal-header .close{margin-top:-2px}.modal-title{margin:0;line-height:1.42857143}

.modal-footer{margin-top:15px;padding:19px 20px 20px;text-align:right;border-top:1px solid #e5e5e5}.modal-footer .btn+.btn{margin-left:5px;margin-bottom:0}.modal-footer .btn-group .btn+.btn{margin-left:-1px}.modal-footer .btn-block+.btn-block{margin-left:0}
.fade.in {opacity: 1;}
.modal-scrollable{ z-index:10000;}
button.close {
  padding: 0;
  cursor: pointer;
  background: 0 0;
  border: 0;
  -webkit-appearance: none; margin:8px 0 0 0;
}
.fr_name{font: 14px 'Open Sans',Helvetica,Arial,sans-serif;
  color: #444;
  float: left;
  margin: 19px 0 0 0; position:absolute;}
  
 .modal.fade.in {
    left: 25%;
    margin-top: 0 !important;
    position: fixed !important;
    top: 0px !important;
    width:895px !important;
}
#invite-friends-info .heading .icheckbox_minimal{ margin-top:5px !important;}

 .checkbox, .radio {
	width: 19px;
	height: 25px;
	padding: 0 5px 0 0;
	background: url(../../images/popup_images/checkbox.png) no-repeat;
	display: block;
	clear: left;
	float: left;
	margin:6px 0 0 0;
}
#invite-friends-info .heading span.checkbox{ margin:6px 0 0 0;}
#chkselectall{ margin-top:8px !important; float:left!important;}
#invite-friends-info .heading .prettycheckbox, .prettyradio{ margin-top:0px !important;}

@media (max-width: 1280px) {
#invite-friends-info{ width:98%;}
.invite-friend-box{ width:100%;}
.modal.fade.in{ width:80% !important;left: 10%;right: 10%;}
.invite-friend-box .friend-detail{ float:left; width:220px; margin:0 0 10px 0; color:#444; text-align:left;margin: 0 10px 10px 0;}
}

@media (max-width: 800px) {
	.modal.fade.in{ width:78% !important;}
   .modal.fade.in {left: 10%;right: 10%;}
}

@media (max-width: 600px) {
	.modal.fade.in{ width:60% !important;}
}

@media (max-width: 480px) {
	.modal.fade.in{ width:50% !important;}
}

@media (max-width: 320px) {
	.modal.fade.in{ width:40% !important;}
}

