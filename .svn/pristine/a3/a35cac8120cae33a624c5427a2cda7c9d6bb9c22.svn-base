/* Tooltip container */
.tooltipnew {
  position: relative;
  display: inline-block;
}

/* Tooltip text */
.tooltipnew .tooltiptext {
  visibility: hidden;
  width: 120px;
  background-color: #fff;
  color: #58595B;
  text-align: center;
  padding: 5px 5px 7px;
  -webkit-border-radius:4px; -moz-border-radius:4px; -ms-border-radius:4px; -o-border-radius:4px; border-radius:4px;
	border:1px solid #d6d7d9;
  /* Position the tooltip text */
  position: absolute;
  z-index: 1;
  bottom: 143%; /*125%*/
  left: 50%;
  margin-left: -57px;

  /* Fade in tooltip */
  opacity: 0;
  transition: opacity 0.3s;
	
  font:400 14px "Lato", Arial, sans-serif;
}

/* Show the tooltip text when you mouse over the tooltip container */
.tooltipnew:hover .tooltiptext {
  visibility: visible;
  opacity: 1;
}

/* Tooltip arrow */
.tooltipnew .tooltiptext:after, .tooltipnew .tooltiptext:before {
	top: 100%;
	left: 50%;
	border: solid transparent;
	content: " ";
	height: 0;
	width: 0;
	position: absolute;
	pointer-events: none;
}

.tooltipnew .tooltiptext:after {
	border-color: rgba(255, 255, 255, 0);
	border-top-color: #fff;
	border-width: 8px;
	margin-left: -8px;
}
.tooltipnew .tooltiptext:before {
	border-color: rgba(214, 215, 217, 0);
	border-top-color: #d6d7d9;
	border-width: 9px;
	margin-left: -9px;
}