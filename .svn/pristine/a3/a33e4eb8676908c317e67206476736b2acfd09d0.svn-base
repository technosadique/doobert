   		//$animal_rescue_id = $this->rescue_animal_model->get_rescue_org_id($org_id);
 
   		$rescue_account_id =  (isset($shelterluv_present[0]['in_shelterluv_id']) && count($shelterluv_present)>0)?$shelterluv_present[0]['in_shelterluv_id']:'';
