	//$dataSet->addPoint(new Point("Other (72)", 70));
	$chart->setDataSet($dataSet);
	$time=time();

	$_SESSION['file1']=$time;
	$chart->setTitle("User agents for www.example.com");
	//$chart->render($_SERVER["DOCUMENT_ROOT"]"generated.png");
